import { personalConfig } from '@/site.config'

const languages = [
	'TypeScript',
	'JavaScript',
	'Python',
	'Golang',
	'Java',
	'Ruby',
	'C',
	'C++',
	'Rust',
	'Clojure',
	'OCaml',
