---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
// import { ModeToggle } from "@/components/mode-toggle";
import EmailLink from "@/components/email-link.astro";
import Contact from "@/components/contact.astro";
import DiscordStatus from "@/components/discord-status";
import Today from "@/components/section/today.astro";
import Projects from "@/components/section/projects.astro";
import { config } from "@/config/site";
---

<Layout title="jyu.dev">
  <div class="flex flex-col md:flex-row">
    <div class="order-last md:order-first">
      <Today />
      <div class="py-4"></div>
      <Projects />
      <div class="py-4"></div>
    </div>
    <div class="grow min-w-32 min-h-4"></div>
    <div class="order-first md:order-last md:text-right">
      <EmailLink />
      <div class="py-2"></div>
      <Contact />

      <div class="py-2"></div>
      <DiscordStatus userId={config.discordUserId} client:load />
    </div>
  </div>
</Layout>
