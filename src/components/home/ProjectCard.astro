---
import type { Project } from "@/types/project";

type Props = {
  proj: Project;
};

const { proj } = Astro.props;
---

<a
  href={proj.link}
  target="_blank"
  class="group rounded-md border border-neutral-800 p-4 transition hover:bg-neutral-800"
>
  <div class="text-md flex items-center gap-1 text-neutral-300">
    {proj.name}
  </div>
  <div class="py-0.5"></div>

  <div class="text-sm text-neutral-400">{proj.desc}</div>

  <div class="py-1"></div>

  <div class="flex gap-2 flex-wrap">
    {
      proj.tags.map((tag) => (
        <div class="rounded-xl bg-neutral-800 px-2 py-1 text-sm text-neutral-300 group-hover:bg-neutral-900">
          {tag}
        </div>
      ))
    }
  </div>
</a>
