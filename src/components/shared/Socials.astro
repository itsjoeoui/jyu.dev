---
type Social = {
  link: string;
  name: string;
};

const socials: Social[] = [
  {
    name: "GitHub",
    link: "https://github.com/itsjoeoui",
  },
  {
    name: "LinkedIn",
    link: "https://www.linkedin.com/in/itsjoeoui/",
  },
  {
    name: "Coffee Chat â˜•",
    link: "https://app.cal.com/itsjoeoui/15min",
  },
];
---

<div class="flex gap-2">
  {
    socials.map((social, idx) => {
      if (idx !== socials.length - 1) {
        return (
          <>
            <a
              href={social.link}
              target="_blank"
              class="hover:text-neutral-100"
            >
              {social.name}
            </a>
            <div>/</div>
          </>
        );
      } else {
        return (
          <a href={social.link} class="hover:text-neutral-100" target="_blank">
            {social.name}
          </a>
        );
      }
    })
  }
</div>
